{
    "manifest_version": 2,

    "name": "DoubanFM Cmd",
    "description": "Commandline like douban.fm",
    "version": "1.0",
    "icons": {
        "16":"radio.png",
        "48":"radio.png",
        "128":"radio.png"
    },

    "browser_action": {
        "default_icon": {                    // optional
            "19": "radio.png"           // optional
        },
        "default_title": "Douban.fm CMD",      // optional; shown in tooltip
        "default_popup": "panel.html"        // optional
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Alt+M",
                "mac": "Alt+M",
                "chromeos": "Alt+M",
                "linux": "Alt+M"
            }
        }
    },
    "web_accessible_resources": [
        "scripts/*",
        "jquery.terminal/*",
        "jquery-base64/*",
        "jquery-cookie/*",
        "jquery-jsonp/*",
        "SoundManager2/*",
        "radio.png"
    ],
    "permissions": [
        "http://www.douban.com/",
        "tabs", "contextMenus", "notifications", "webRequest"
    ],
    "devtools_page": "devtool.html",
    "background": {
        "page": "background.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
